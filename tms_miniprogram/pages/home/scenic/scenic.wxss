/* pages/home/scenic/scenic.wxss */
.scenic_name{
    display: flex;
    justify-content: center;
    font-size: 30px;
    font-weight: bolder;
    margin:20px 0px 20px 0px;
}

.scenic-img{
    width: 100%;
    height: 200px;
}


.scenic_info{
    font-size: 14px;
}
.info-table{
    margin:20px 0px 20px 0px;
    position: relative;
    width: 100%;
    height: 50px;
}
.table-cell1{
    color: rgb(71,160,229);
    position: absolute;
}
.table-cell2{
    color: rgb(71,160,229);
    position: absolute;
    left: 50%;
}
.table-cell3{
    color: rgb(71,160,229);
    position: absolute;
    top:24px;
}
.table-cell4{
    color: rgb(71,160,229);
    position: absolute;
    top: 24px;
    left: 50%;
}
.table-cell5{
    color: rgb(71,160,229);
    position: absolute;
    top: 48px;
}
.table-cell6{
    color: rgb(71,160,229);
    position: absolute;
    top: 48px;
    left: 50%;
}
.scenic-container{
    margin-top: 40px;
    margin-bottom: 20px;
}
.btn-view{
    position: fixed;
    bottom: 0%;
    width: 100%;
    height: 40px;
}
.like-btn{
    display: flex;
    justify-content:center;
    width: 50%;
    position: absolute;
}
.comment-btn{
    display: flex;
    justify-content:center;
    width: 50%;
    position: absolute;
    left: 50%;
}