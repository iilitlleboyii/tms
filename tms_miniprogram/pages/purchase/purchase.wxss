/* pages/purchase/purchase.wxss */
page {
    background-color: rgb(239, 239, 239);
}

.order-list {
    margin-top: 2%;
    margin-bottom: 2%;
    background-color: white;
    border-radius: 32rpx;
    overflow: auto;
}

.order-list-tittle {
    position: relative;
    left: 10px;
    top: 10px;
}

.ticket-card {
    position: relative;
    padding-top: 20px;
    padding-left: 10px;
    height: 150px;
    width: 100%;
}

.ticket-image {
    position: absolute;
    height: 150px;
    width: 200px;
}

.ticket-name {
    position: absolute;
    left: 220px;
    width: 40%;
    /*内容超出后隐藏*/
    overflow: hidden;
    /* 超出内容显示为省略号*/
    text-overflow: ellipsis;
    /*文本不进行换行*/
    white-space: nowrap;
}

.ticket-info {
    position: absolute;
    color: red;
    font-weight: bold;
    font-size: 15px;
}

.ticket-stepper {
    position: absolute;
    right: 30px;
    bottom: 60px;
}

.ticket-price {
    position: absolute;
    color: red;
    font-weight: bold;
    font-size: 20px;
    left: 215px;
    bottom: 10px;
}

.cashier {
    background-color: white;
    border-radius: 32rpx;
    padding: 5px;
    overflow: auto;
}

.cashier-total {
    margin-top: 20px;
    margin-left: 70%;
}

.pay-bar {
    position: fixed;
    background-color: white;
    bottom: 0%;
    height: 50px;
    width: 100%;
    display: flex;
    justify-content:space-between;
    align-items:center;
}

.post_order_btn {
    width: 100px;
    height: 41px;
    border-radius: 40rpx;
    background-color: red;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}