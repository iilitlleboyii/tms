/* pages/myself/myself.wxss */
page {
    background-color: rgb(239, 239, 239);
}

.headimg {
    height: 150rpx;
    width: 150rpx;
    padding: 30rpx;
}

.user_name {
    position: relative;
    bottom: 100rpx;
}

.account-info {
    margin: 10px 0px 10px 0px;
    background-color: white;
}

.block-my {
    margin: 10px 0px 10px 0px;
    background-color: white;
}

.collect-items {
    position: relative;
    width: 100%;
    height: 150px;
    margin-bottom: 10px;
}

.collect-item_img {
    position: absolute;
    width: 200px;
    height: 150px;
}

.collect-item_text {
    position: absolute;
    left: 220px;
    top: 65px;
    width: 40%;
    font-size: 16px;
    color: black;
    /*内容超出后隐藏*/
    overflow: hidden;
    /* 超出内容显示为省略号*/
    text-overflow: ellipsis;
    /*文本不进行换行*/
    white-space: nowrap;
}